<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<GridPane fx:controller="Controller.AccountCreationController"
          maxHeight="200" maxWidth="400" prefHeight="200" prefWidth="400"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text text="Account Creation"
          GridPane.rowIndex="0"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          GridPane.rowSpan="1"
          GridPane.halignment="CENTER"
    />
    <Label text="Desired Username:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"
           />
    <TextField fx:id="createUsername"
            GridPane.rowIndex="1"
            GridPane.columnIndex="1"
    />
    <Label text="Password:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"
    />
    <TextField fx:id="createPassword"
            GridPane.rowIndex="2"
            GridPane.columnIndex="1"
    />

    <Label text="Email:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="3"
    />
    <TextField fx:id="createEmail"
            GridPane.rowIndex="3"
            GridPane.columnIndex="1"
    />

    <Button text="Submit"
            defaultButton="true"
            onAction="#createAccount"
            GridPane.rowIndex="4"
            GridPane.rowSpan="2"
            GridPane.columnIndex="1"
    />


</GridPane>