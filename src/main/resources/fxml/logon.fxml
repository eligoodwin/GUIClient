<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane
        maxHeight="200" maxWidth="400" prefHeight="200" prefWidth="400"
        fx:controller="Controller.LogonController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text text="Logon"
          GridPane.rowIndex="0"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          GridPane.rowSpan="1"
          GridPane.halignment="CENTER"
    />

    <Label text="Username:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="1"
    />


    <TextField fx:id="logonUsername"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"
    />

    <Label text="Password:"
           GridPane.columnIndex="0"
           GridPane.rowIndex="2"
    />

    <PasswordField
            fx:id="logonPassword"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
    />

    <Button text="Sign in"
            defaultButton="true"
            onAction="#gotoNextPage"
            GridPane.rowIndex="3"
            GridPane.rowSpan="2"
            GridPane.columnIndex="1"
    />

    <Text fx:id="errorText"
          text=""
          GridPane.rowIndex="5"
          GridPane.columnIndex="1"
          GridPane.halignment="LEFT"
    />

</GridPane>